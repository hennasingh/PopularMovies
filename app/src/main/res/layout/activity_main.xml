    android:layout_height="match_parent"
    android:id="@+id/MainActivity_DrawerLayout_MainDrawer"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainActivity_FrameLayout_MoviesContainer"/>
    
