<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    android:foreground="@drawable/item_click_effect">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DetailsFragment_ImageView_TrailerThumbnail"
        android:adjustViewBounds="true"
        android:contentDescription="@string/movie_trailer"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_play_circle_outline_white_36dp"
        android:contentDescription="@string/movie_trailer"
        />


</android.support.v7.widget.CardView>
